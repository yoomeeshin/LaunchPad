rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow anyone to read approved reviews
    match /reviews/{reviewId} {
      allow read: if resource.data.approved == true || request.auth != null;
      allow create: if true; // Allow anyone to create reviews
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Allow anyone to read companies
    match /companies/{companyId} {
      allow read: if true; // Anyone can read company data
      allow write: if request.auth != null; // Only authenticated users can write
    }
    
    // Lock down all other collections to require authentication
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
} 